{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SubInstructions json-schema",
  "type": "object",
  "properties": {
    "Class": { "type": "string" },
    "ActionMethod": { "type": "string" },
    "SubInstructions": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "SubInstructionContainer": { "$ref": "#/definitions/SubInstructionContainer" }
          },
          "required": ["SubInstructionContainer"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "maxProperties": 0
        }
      ]
    }
  },
  "required": ["Class", "ActionMethod", "SubInstructions"],
  "additionalProperties": false,

  "definitions": {
    "SubInstruction": {
      "type": "object",
      "properties": {
        "Class": { "type": "string" },
        "Method": { "type": "string" }
      },
      "required": ["Class", "Method"],
      "additionalProperties": false
    },

    "SubInstructionContainer": {
      "type": "object",
      "properties": {
        "ExecutionType": {
          "type": "string",
          "enum": ["Serial", "Parallel"]
        },
        "SubInstructionContainerChildren": {
          "type": "array",
          "items": { "$ref": "#/definitions/SubInstructionNode" }
        }
      },
      "required": ["ExecutionType", "SubInstructionContainerChildren"],
      "additionalProperties": false
    },

    "SubInstructionNode": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "SubInstructionContainer": { "$ref": "#/definitions/SubInstructionContainer" }
          },
          "required": ["SubInstructionContainer"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "SubInstruction": { "$ref": "#/definitions/SubInstruction" }
          },
          "required": ["SubInstruction"],
          "additionalProperties": false
        }
      ]
    }
  }
}
